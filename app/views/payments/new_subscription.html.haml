.container-fluid
  .page-titles
    %ol.breadcrumb
      %li.breadcrumb-item
        %a{:href => "javascript:void(0)"} Shop
      %li.breadcrumb-item.active
        %a{:href => "javascript:void(0)"} New Subscription
  .row
    .col-xl-12
      .card
        .card-body
          .row
            .col-lg-4.col-md-5.order-md-2.mb-4
              %h4.d-flex.justify-content-between.align-items-center.mb-3
                %span.text-muted Your cart
                %span.badge.badge-primary.badge-pill 1
              %ul.list-group.mb-3
                %li.list-group-item.d-flex.justify-content-between.lh-condensed
                  %div
                    %h6.my-0 Product name
                    %small.text-muted Brief description
                  %span.text-muted $12
                %li.list-group-item.d-flex.justify-content-between
                  %span Total (USD)
                  %strong $20
            .col-lg-8.col-md-7.order-md-1
              %h4.mb-3 Billing address
              %form.needs-validation{:novalidate => ""}
              = form_tag "/create_subscription", method: :post, class: "needs-validation" do
                .row
                  .col-md-6.mb-3
                    %label First name
                    = text_field_tag 'first_name', nil, class: "form-control", placeholder: "First Name", required: true
                    .invalid-feedback
                      Valid first name is required.
                  .col-md-6.mb-3
                    %label Last name
                    = text_field_tag 'last_name', nil, class: "form-control", placeholder: "Last Name", required: true
                    .invalid-feedback
                      Valid last name is required.
                .mb-3
                  %label Username
                  .input-group
                    .input-group-prepend
                      %span.input-group-text @
                    = text_field_tag 'user_name', nil, class: "form-control", placeholder: "User Name", required: true
                    .invalid-feedback.d-block
                      Your username is required.
                .mb-3
                  %label{:for => "email"}
                    Email
                    %span.text-muted (Optional)
                  = email_field_tag 'email', nil, class: "form-control", placeholder: "Email"
                  .invalid-feedback
                    Please enter a valid email address for shipping updates.
                .mb-3
                  %label Address
                  = text_field_tag 'address', nil, class: "form-control", placeholder: "Address", required: true
                  .invalid-feedback
                    Please enter your shipping address.
                .mb-3
                  %label{:for => "address2"}
                    Address 2
                    %span.text-muted (Optional)
                  = text_field_tag 'address2', nil, class: "form-control", placeholder: "Address2"
                .row
                  .col-lg-5.col-md-12.mb-3
                    %label{:for => "country"} Country
                    = select_tag 'country', options_for_select(CS.countries.collect{ |c| [c[1], c[0]] }), include_blank: '--Select a country--', class: 'form-control', required: true
                  .col-lg-4.col-md-12.mb-3
                    %label{:for => "state"} State
                    = select_tag 'state', options_for_select([]), include_blank: '--Select a state--', class: 'form-control', required: true
                  .col-lg-3.col-md-12.mb-3
                    %label{:for => "zip"} Zip
                    = text_field_tag 'zip_code', nil, class: "form-control", placeholder: "Zip Code", required: true
                    .invalid-feedback
                      Zip code required.
                %hr.mb-4/
                .row
                  .col-md-6.mb-3
                    %label{:for => "cc-name"} Name on card
                    = text_field_tag 'card_name', nil, class: "form-control", placeholder: "Full name as displayed on card", required: true
                    %small.text-muted Full name on card
                    .invalid-feedback
                      Name on card is required
                  .col-md-6.mb-3
                    %label{:for => "cc-number"} Credit card number
                    = text_field_tag 'card_number', nil, class: "form-control", placeholder: "Card Number", required: true
                    .invalid-feedback
                      Credit card number is required
                .row
                  .col-md-3.mb-3
                    %label{:for => "cc-expiration"} Expiration
                    = text_field_tag 'expire_date', nil, class: "form-control", placeholder: "Expiration", required: true
                    .invalid-feedback
                      Expiration date required
                  .col-md-3.mb-3
                    %label{:for => "cc-expiration"} CVV
                    = number_field_tag 'cvv', nil, class: "form-control", placeholder: "CVV", required: true
                    .invalid-feedback
                      Security code required
                %hr.mb-4/
                = submit_tag nil, class: " btn btn-warning btn-lg btn-block"

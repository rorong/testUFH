!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Edify
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css", :rel => "stylesheet"}
    %link{:href => "https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css", :rel => "stylesheet"}/
    = stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Roboto:wght@100;300;400;500;700;900&display=swap'
    = javascript_importmap_tags

  %body
    -if current_user.present?
      = render 'layouts/shared/default'
      = render 'layouts/shared/footer'
    - else
      = render "layouts/shared/alert"
      = yield

    = javascript_include_tag 'global.min', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'moment', 'data-turbolinks-track': 'reload'

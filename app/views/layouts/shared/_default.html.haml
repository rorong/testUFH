  .nav-header
    %a.brand-logo{:href => ""}
      - if $logoText.present?
        .logo-compact
          =image_tag "#{$logoText}"
        .brand-title
          =image_tag "#{$logoText}"
      - else
        .logo-abbr
          =image_tag "logo.png"
        .logo-compact
          =image_tag "logo.png"
        .brand-title
          =image_tag "logo-text.png"
    .nav-control
      .hamburger
        %span.line
        %span.line
        %span.line

  .header
    .header-content
      %nav.navbar.navbar-expand
        .collapse.navbar-collapse.justify-content-between
          .header-left
            .dashboard_bar
              - case "#{controller.controller_name.underscore}##{controller.action_name}"
              - when "courses#content_hub"
                .color-red Content Hub
              - when "courses#index"
                .color-red My Courses
              - when "payments#index"
                .color-red Billing
              - when "users#index"
                .color-red Membership Directory
              - when "messages#index"
                .color-red Messages
              - when "users#show"
                .color-red Profile
              - when "payments#index"
                .color-red Billing
              - when "payments#new_subscription"
                .color-red New Subscription
              - when "privacy_policy#terms_and_conditions"
                .color-red Terms And Conditions
              - when "privacy_policy#privacy_policy"
                .color-red Privacy Policy


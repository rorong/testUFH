.container-fluid
  .page-titles
    %ol.breadcrumb
      %li.breadcrumb-item
        %a{:href => "javascript:void(0)"} App
      %li.breadcrumb-item.active
        %a{:href => "javascript:void(0)"} Calendar
  / row
  .row
    .col-xl-3
      .card
        .card-body
          %h4.card-intro-title Calendar
          %div
            #external-events.my-3
              %p Drag and drop your event or click in the calendar
              .external-event{"data-class" => "bg-warning"}
                %i.fa.fa-move>
                New Theme Release
              .external-event{"data-class" => "bg-success"}
                %i.fa.fa-move>
                My Event
              .external-event{"data-class" => "bg-warning"}
                %i.fa.fa-move>
                Meet manager
              .external-event{"data-class" => "bg-dark"}
                %i.fa.fa-move>
                Create New theme
            / checkbox
            .checkbox.custom-control.checkbox-event.custom-checkbox.pt-3.pb-5
              %input#drop-remove.custom-control-input{:type => "checkbox"}/
              %label.custom-control-label{:for => "drop-remove"} Remove After Drop
            %a.btn.btn-warning.btn-event.w-100{"data-target" => "#add-category", "data-toggle" => "modal", :href => "javascript:void()"}
              %span.align-middle
                %i.ti-plus
              Create New
    .col-xl-9
      .card
        .card-body
          #calendar.app-fullcalendar
    / BEGIN MODAL
    #event-modal.modal.fade.none-border
      .modal-dialog
        .modal-content
          .modal-header
            %h4.modal-title
              %strong Add New Event
          .modal-body
          .modal-footer
            %button.btn.btn-default.waves-effect{"data-dismiss" => "modal", :type => "button"} Close
            %button.btn.btn-success.save-event.waves-effect.waves-light{:type => "button"}
              Create
              event
            %button.btn.btn-danger.delete-event.waves-effect.waves-light{"data-dismiss" => "modal", :type => "button"} Delete
    / Modal Add Category
    #add-category.modal.fade.none-border
      .modal-dialog
        .modal-content
          .modal-header
            %h4.modal-title
              %strong Add a category
          .modal-body
            %form
              .row
                .col-md-6
                  %label.control-label Category Name
                  %input.form-control.form-white{:name => "category-name", :placeholder => "Enter name", :type => "text"}/
                .col-md-6
                  %label.control-label Choose Category Color
                  %select.form-control.form-white{"data-placeholder" => "Choose a color...", :name => "category-color"}
                    %option{:value => "success"} Success
                    %option{:value => "danger"} Danger
                    %option{:value => "info"} Info
                    %option{:value => "pink"} Pink
                    %option{:value => "primary"} Primary
                    %option{:value => "warning"} Warning
          .modal-footer
            %button.btn.btn-default.waves-effect{"data-dismiss" => "modal", :type => "button"} Close
            %button.btn.btn-danger.waves-effect.waves-light.save-category{"data-dismiss" => "modal", :type => "button"} Save
